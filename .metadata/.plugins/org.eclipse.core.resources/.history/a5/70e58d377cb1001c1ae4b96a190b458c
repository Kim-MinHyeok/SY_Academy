package day0401;

public class MatrixTest03 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[][] matrix = new int[5][5];
		int sum = 0;

		int n = 1;

		for (int i = 0; i < 4; i++) {
				for (int j = 0; j < 4; j++) {
					if (j == 4) {
					} else {
						matrix[i][j] = n++;
					}
		}}

		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 5; j++) {
				System.out.print(matrix[i][j] + "\t");
			}
			System.out.println("\t");
		}
	}

}
