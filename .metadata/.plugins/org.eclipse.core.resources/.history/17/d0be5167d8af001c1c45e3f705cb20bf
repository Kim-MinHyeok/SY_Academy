package day0330;

import java.util.Scanner;

public class ForTest02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int N,sum = 0;
		System.out.print("정수 N을 입력하세요 : ");
		N = sc.nextInt();
		
		for (int i = 1 ;i <= N ; i++) {
			sum += i;
		}
		
		System.out.print(sum);
	}

}
