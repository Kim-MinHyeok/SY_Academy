package day0403;

public class CreditCard {
	public double total(double[] arr) {
		double sum = 0;
		
		for(double i: arr) {
			sum += i;
		}
		
		return sum;
	}

	public double average(double[] arr) {
		double avg=0;
		
		for(double i: arr) {
			if(i < 0) {
				System.out.println("사용 금액에 음수가 포함되어 있습니다.");
				return avg = 0;
			}
			avg += i;
		}
		
		avg = avg/arr.length;
		
		return avg;
	}
	
	public int max(double[] arr) {
		int max=0;
	
		for (int i=1; i<arr.length; i++) {
			if (arr[i] > arr[i-1]) {
				max = i;
			}
		}
		
		return max;
	}
	
	public void min(double[] arr) {
		double[] a = {1.1, 3.5, 6.4, 7.2};
		average(a);
	}
}
